
@{
    ViewData["Title"] = "AddAnswer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AddAnswerDto
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="AddAnswer" asp-controller="Answer" method="post" >
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Cevap Ekle</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label" asp-for="Response">Cevap</label>
                            <textarea asp-for="Response" class="form-control" placeholder="Lütfen Yeni Cevap Giriniz...."></textarea>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-lg btn-outline-success float-start">Ekle</button>
                        <a asp-controller="Answer" asp-action="Answers" class="btn btn-lg btn-outline-info float-end">Geri Dön</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

