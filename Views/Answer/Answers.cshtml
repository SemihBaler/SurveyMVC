
@{
    ViewData["Title"] = "Answers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}

@model List<AnswerDto>
<style>
    /* Tablo hücrelerini sınırla ve taşan içeriği görüntüle */
    .table td {
        max-width: 700px; /* Maksimum genişlik ayarı */
        overflow: auto; /* Taşan içeriği görüntüle */
        text-align: left; /* Metni yatayda ortala */
        vertical-align: middle; /* Metni dikeyde ortala */
    }

    .table {
        margin: none;
    }
</style>

<div class="row">
    <div class="card col-sm-12">

        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Cevap</th>
                        <th>Statüsü</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Değiştirme Tarihi</th>
                        <th>Silme Tarihi</th>
                        <th>Güncelle</th>
                        <th>İptal Et</th>
                        <th>Kaldır</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.Response</td>
                                <td>
                                    @if (@item.Status.ToString() == "1")
                                    {
                                        <span>Yayinda</span>
                                    }
                                    else if (@item.Status.ToString() == "2")
                                    {
                                        <span>Yayinda</span>
                                    }
                                    else
                                    {
                                        <span>Yayinda Değil</span>
                                    }
                                </td>
                                <td>@item.CreatedDate</td>
                                <td>@item.UpdatedDate</td>
                                <td>@item.DeletedDate</td>
                                <td><a asp-action="UpdateAnswer" asp-controller="Answer" asp-route-id="@item.AnswerId" class="btn btn-md btn-outline-success">Güncelle</a></td>
                                <td><a asp-action="DeleteAnswer" asp-controller="Answer" asp-route-id="@item.AnswerId" class="btn btn-md btn-outline-warning">İptal Et</a></td>
                                <td><a asp-action="RemoveAnswer" asp-controller="Answer" asp-route-id="@item.AnswerId" class="btn btn-md btn-outline-danger">Kaldır</a></td>
                            </tr>
                            count++;
                        }                    
                    <!-- Diğer satırları da benzer şekilde düzenleyin -->
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a href="/Answer/AddAnswer" class="btn w-100" style="background-color:rgb(135,21,43); color:white;">Yeni Cevap Ekle</a>
        </div>
    </div>
</div>

